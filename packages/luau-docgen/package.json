{
  "name": "@storybakery/luau-docgen",
  "version": "0.1.0",
  "description": "StoryBakery Luau doc generator",
  "main": "src/index.js",
  "bin": {
    "luau-docgen": "bin/luau-docgen.js"
  },
  "files": [
    "bin",
    "src",
    "native"
  ],
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "native:build": "cargo build --manifest-path native/Cargo.toml --release",
    "native:build:debug": "cargo build --manifest-path native/Cargo.toml",
    "native:clean": "cargo clean --manifest-path native/Cargo.toml",
    "native:bin": "node scripts/copy-native.js",
    "native:build:bin": "npm run native:build && npm run native:bin"
  }
}
